<?xml version="1.0" encoding="utf-8"?>
<!-- On-Screen Keyboard Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/edex_surface"
    android:padding="4dp">

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button android:id="@+id/key_esc" style="@style/KeyboardButton" android:text="ESC"/>
        <Button android:id="@+id/key_1" style="@style/KeyboardButton" android:text="1"/>
        <Button android:id="@+id/key_2" style="@style/KeyboardButton" android:text="2"/>
        <Button android:id="@+id/key_3" style="@style/KeyboardButton" android:text="3"/>
        <Button android:id="@+id/key_4" style="@style/KeyboardButton" android:text="4"/>
        <Button android:id="@+id/key_5" style="@style/KeyboardButton" android:text="5"/>
        <Button android:id="@+id/key_6" style="@style/KeyboardButton" android:text="6"/>
        <Button android:id="@+id/key_7" style="@style/KeyboardButton" android:text="7"/>
        <Button android:id="@+id/key_8" style="@style/KeyboardButton" android:text="8"/>
        <Button android:id="@+id/key_9" style="@style/KeyboardButton" android:text="9"/>
        <Button android:id="@+id/key_0" style="@style/KeyboardButton" android:text="0"/>
        <Button android:id="@+id/key_backspace" style="@style/KeyboardButton" android:text="⌫"/>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button android:id="@+id/key_tab" style="@style/KeyboardButton" android:text="TAB"/>
        <Button android:id="@+id/key_q" style="@style/KeyboardButton" android:text="Q"/>
        <Button android:id="@+id/key_w" style="@style/KeyboardButton" android:text="W"/>
        <Button android:id="@+id/key_e" style="@style/KeyboardButton" android:text="E"/>
        <Button android:id="@+id/key_r" style="@style/KeyboardButton" android:text="R"/>
        <Button android:id="@+id/key_t" style="@style/KeyboardButton" android:text="T"/>
        <Button android:id="@+id/key_y" style="@style/KeyboardButton" android:text="Y"/>
        <Button android:id="@+id/key_u" style="@style/KeyboardButton" android:text="U"/>
        <Button android:id="@+id/key_i" style="@style/KeyboardButton" android:text="I"/>
        <Button android:id="@+id/key_o" style="@style/KeyboardButton" android:text="O"/>
        <Button android:id="@+id/key_p" style="@style/KeyboardButton" android:text="P"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button android:id="@+id/key_ctrl" style="@style/KeyboardButton" android:text="CTRL"/>
        <Button android:id="@+id/key_a" style="@style/KeyboardButton" android:text="A"/>
        <Button android:id="@+id/key_s" style="@style/KeyboardButton" android:text="S"/>
        <Button android:id="@+id/key_d" style="@style/KeyboardButton" android:text="D"/>
        <Button android:id="@+id/key_f" style="@style/KeyboardButton" android:text="F"/>
        <Button android:id="@+id/key_g" style="@style/KeyboardButton" android:text="G"/>
        <Button android:id="@+id/key_h" style="@style/KeyboardButton" android:text="H"/>
        <Button android:id="@+id/key_j" style="@style/KeyboardButton" android:text="J"/>
        <Button android:id="@+id/key_k" style="@style/KeyboardButton" android:text="K"/>
        <Button android:id="@+id/key_l" style="@style/KeyboardButton" android:text="L"/>
        <Button android:id="@+id/key_enter" style="@style/KeyboardButton" android:text="↵"/>
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button android:id="@+id/key_shift" style="@style/KeyboardButton" android:text="SHIFT"/>
        <Button android:id="@+id/key_z" style="@style/KeyboardButton" android:text="Z"/>
        <Button android:id="@+id/key_x" style="@style/KeyboardButton" android:text="X"/>
        <Button android:id="@+id/key_c" style="@style/KeyboardButton" android:text="C"/>
        <Button android:id="@+id/key_v" style="@style/KeyboardButton" android:text="V"/>
        <Button android:id="@+id/key_b" style="@style/KeyboardButton" android:text="B"/>
        <Button android:id="@+id/key_n" style="@style/KeyboardButton" android:text="N"/>
        <Button android:id="@+id/key_m" style="@style/KeyboardButton" android:text="M"/>
        <Button android:id="@+id/key_comma" style="@style/KeyboardButton" android:text=","/>
        <Button android:id="@+id/key_period" style="@style/KeyboardButton" android:text="."/>
        <Button android:id="@+id/key_slash" style="@style/KeyboardButton" android:text="/"/>
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button android:id="@+id/key_alt" style="@style/KeyboardButton" android:text="ALT"/>
        <Button 
            android:id="@+id/key_space" 
            style="@style/KeyboardButton" 
            android:layout_weight="4"
            android:text="SPACE"/>
        <Button android:id="@+id/key_minus" style="@style/KeyboardButton" android:text="-"/>
        <Button android:id="@+id/key_equals" style="@style/KeyboardButton" android:text="="/>
        <Button android:id="@+id/key_hide" style="@style/KeyboardButton" android:text="HIDE"/>
    </LinearLayout>

</LinearLayout>
