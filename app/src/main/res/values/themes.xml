<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Sci-Fi styling -->
    <style name="Theme.EdexUIAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/edex_primary</item>
        <item name="colorPrimaryVariant">@color/edex_primary_dark</item>
        <item name="colorOnPrimary">@color/edex_terminal_bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/edex_accent</item>
        <item name="colorSecondaryVariant">@color/edex_accent</item>
        <item name="colorOnSecondary">@color/edex_terminal_bg</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/edex_background</item>
        <item name="colorSurface">@color/edex_surface</item>
        <item name="colorOnSurface">@color/edex_text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/edex_terminal_bg</item>
        <item name="android:navigationBarColor">@color/edex_terminal_bg</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/edex_text_primary</item>
        <item name="android:textColorSecondary">@color/edex_text_secondary</item>
    </style>

    <!-- Fullscreen theme for immersive mode -->
    <style name="Theme.EdexUIAndroid.Fullscreen" parent="Theme.EdexUIAndroid">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Keyboard Button Style -->
    <style name="KeyboardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:backgroundTint">@color/edex_surface</item>
        <item name="android:textColor">@color/edex_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
